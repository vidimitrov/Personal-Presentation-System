@model PPSystem.Web.ViewModels.Portfolio.ProjectViewModel

<div class="col-md-12">
    <div class="well">
        <div class="row">
            <div class="col-md-3">
                <img src="data:image/png;base64,@Model.Image" alt="@Model.Title image" class="img-responsive" />
            </div>
            <div class="col-md-9">
                
                <h2>@Model.Title</h2>
                <hr />
                <p><span class="project-label"><b>Description: </b></span> @Model.Description </p>
                <p><span class="project-label"><b>Rating: </b></span> @Model.Rating </p>
                <p><span class="project-label"><b>Repository: </b></span> <a href="@Model.RepoUrl">@Model.RepoUrl</a> </p>

                @if (Model.Technologies.Count > 0)
                {
                    <p>
                        <span class="project-label">Technologies: </span>
                        @foreach (var technology in Model.Technologies)
                        {
                            <span>@technology.Name, </span>
                        }
                    </p>
                }
                
                <a class="btn btn-default pull-right pencil">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><b> Add Review</b>
                </a>
                <a class="btn btn-default pull-right star">
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span><b> Rate</b>
                </a>

                @if (Model.Reviews.Any())
                {
                    <h4 class="pull-right">Last review:</h4>

                    var lastReview = Model.Reviews.FirstOrDefault();


                    @Helpers.Review(lastReview.Content, lastReview.ReviewerName)
                }
            </div>
        </div>
    </div>
</div>
