@model PPSystem.Web.ViewModels.Account.OwnerViewModel
@{
    ViewBag.Title = "Home Page";
}

<br />
<div class="megatron">
    <div class="row">
        <img src="@ViewBag.Photo" alt="@Model.FullName" class="col-md-3 img-responsive" />
        <div class="col-md-8">
            <h1>@Model.FullName</h1>

            @if (!String.IsNullOrEmpty(@Model.JobPosition) != null && !String.IsNullOrEmpty(@Model.JobCompany))
            {
                <h3>@Model.JobPosition at @Model.JobCompany</h3>
            }

            @Helpers.Blockquote(Model.Summary)
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Top Projects</h3>
            </div>
            <div class="panel-body" style="color: #999">
                <ul class="list-group contacts">
                    @{
                        ICollection<PPSystem.Web.ViewModels.Portfolio.ProjectViewModel> projects = ViewBag.Projects;
                    }

                    @foreach (var project in projects)
                    {
                        <li class="list-group-item">
                            <div>
                                <span class="badge pull-right">@project.Rating</span>
                                @project.Title
                            </div>
                            <div>
                                <a href="@project.RepoUrl">Link to repo</a>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Top Skills</h3>
            </div>
            <div class="panel-body" style="color: #999">
                @{
                    ICollection<PPSystem.Web.ViewModels.CV.SkillViewModel> skills = ViewBag.Skills;
                }

                @Html.Partial("_SkillsWidget", skills)
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Contacts</h3>
            </div>
            <div class="panel-body">
                <ul class="list-group contacts">
                    @Helpers.ListGroupItem("Email: ", Model.Email, false)
                    @Helpers.ListGroupItem("Github: ", Model.GitHub, true)
                    @Helpers.ListGroupItem("Google: ", Model.Google, true)
                    @Helpers.ListGroupItem("Twitter: ", Model.Twitter, true)
                    @Helpers.ListGroupItem("Facebook: ", Model.Facebook, true)
                    @Helpers.ListGroupItem("LinkedIn: ", Model.LinkedIn, true)
                </ul>
            </div>
        </div>
    </div>
</div>