@model PPSystem.Web.ViewModels.Portfolio.ProjectViewModel

@{
    ViewBag.Title = "Edit Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Edit Project</h2>

